        <Label Content="Edad" HorizontalAlignment="Left" Margin="58,127,0,0" VerticalAlignment="Top" Height="23" Width="116"/>
        <TextBox HorizontalAlignment="Left" Margin="255,127,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="259" Height="23"  Name="RegistroEdad"/>
        <Label Content="Sexo" HorizontalAlignment="Left" Margin="58,174,0,0" VerticalAlignment="Top" Height="23" Width="116"/>
        <Label Content="Curso" HorizontalAlignment="Left" Margin="58,229,0,0" VerticalAlignment="Top" Height="23" Width="116"/>
