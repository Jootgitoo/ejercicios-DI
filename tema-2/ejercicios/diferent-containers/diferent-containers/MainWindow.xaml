<Window x:Class="diferent_containers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:diferent_containers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Rows="2" Columns="2">

        <WrapPanel>

            <Label Content="WRAP PANEL CONTAINER"/>
            <Button Content="Wrap Panel Container"/>
            <RadioButton Content="Wrap Panel Container"/>

        </WrapPanel>


        <StackPanel>

            <Label Content="STACK PANEL CONTAINER"/>
            <Button Content="Stack Panel Container"/>
            <RadioButton Content="Stack Panel Container"/>

        </StackPanel>


        <DockPanel>

            <Label Content="DOCK PANEL CONTAINER"/>
            <Button Content="Dock Panel Container"/>
            <RadioButton Content="Dock Panel Container"/>

        </DockPanel>


        <Canvas>

            <Label Canvas.Top="0">CANVAS CONTAINER</Label>
            <Button Canvas.Left="10" Canvas.Bottom="10">Canvas Container</Button>
            <RadioButton Canvas.Right="10" Canvas.Bottom="10">Canvas Container</RadioButton>

        </Canvas>

    </UniformGrid>

</Window>
