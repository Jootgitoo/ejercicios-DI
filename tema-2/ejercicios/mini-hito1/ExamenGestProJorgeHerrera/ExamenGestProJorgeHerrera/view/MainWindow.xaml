<Window x:Class="ExamenGestProJorgeHerrera.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamenGestProJorgeHerrera"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid x:Name="cabecera" Margin="0,0,0,373" Background="#FF8E1A8E">
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="GESTPRO" VerticalAlignment="Center"/>
        </Grid>


        <TabControl TabStripPlacement="Left" Margin="24,77,0,10">

            <TabItem Header="Inicio">

                <Grid Background="#FFF1EBBD">

                    <Button Background="Pink" Content="Proyectos" Margin="36,54,525,240"></Button>
                    <Button Background="Pink" Content="Empleados" Margin="36,117,525,175"></Button>
                    <Button Background="Pink" Content="Estadisticas" Margin="198,54,363,240"/>
                    <Button Background="Pink" Content="Usuarios" Margin="198,117,363,175"/>
                    <Button Background="Pink" Content="G. Economica" Margin="36,186,525,95"/>

                    <Image x:Name="imgHoja" Tag="Wand" Source="/view/palm_3086199.png" Margin="437,101,150,70" IsEnabled="True"/>

                    <Image x:Name="imgMaestre" Tag="Wand" Source="/view/logotipo-ies-maestredecalatrava-1.png" Margin="438,284,-18,0" IsEnabled="True"/>

                </Grid>

            </TabItem>

            <TabItem Header="Proyecto">
                <Grid Background="#FFF1EBBD">

                    <StackPanel Margin="538,63,0,80">
                        <Label x:Name="lblCodigoProyecto" Content="Codigo proyecto" Height="35" Width="146" RenderTransformOrigin="0.245,0.43"/>
                        <TextBox x:Name="txtCodigoProyecto" TextWrapping="Wrap" Width="120"/>

                        <Label x:Name="lblNombre" Content="Nombre"/>
                        <TextBox x:Name="txtNombre" TextWrapping="Wrap" Width="120"/>

                        <Label x:Name="lblFechaInicio" Content="Fecha inicio"/>
                        <TextBox x:Name="txtFechaIniocio" TextWrapping="Wrap" Width="120"/>

                        <Label x:Name="lblFechaFin" Content="Fecha fin"/>
                        <TextBox x:Name="txtFechaFin" TextWrapping="Wrap" Width="120"/>

                    </StackPanel>

                    <Image x:Name="imgMaestre2" Tag="Wand" Source="/view/logotipo-ies-maestredecalatrava-1-Copia.png" Margin="10,271,496,5" IsEnabled="True"/>
                    <Image x:Name="imgHoja2" Tag="Wand" Source="/view/palm_3086199-Copia.png" Margin="602,-10,38,259" IsEnabled="True"/>


                    <Grid Background="#FFF1EBBD" Margin="244,266,0,0">
                        <Button Content="Añadir" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="127" Height="34" />
                        <Button Content="Modificar" HorizontalAlignment="Center" VerticalAlignment="Center" Width="127" Height="34"/>
                        <Button Content="Eliminar" HorizontalAlignment="Left" Margin="304,0,0,0" VerticalAlignment="Center" Width="127" Height="34"/>
                    </Grid>

                    <DataGrid x:Name="dgvProyectos" Margin="140,80,241,80">
                        <DataGrid.Columns>

                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox HorizontalAlignment="Left" Margin="173,36,0,0" TextWrapping="Wrap" Text="Buscar" VerticalAlignment="Top" Width="247" Height="29"/>


                </Grid>



            </TabItem>

            <TabItem Header="Empleados" IsEnabled="False"></TabItem>
            <TabItem Header="G. Economica" IsEnabled="False" ></TabItem>
            <TabItem Header="Estadisticas" IsEnabled="False"></TabItem>
            <TabItem Header="Usuarios" IsEnabled="False"></TabItem>

        </TabControl>



    </Grid>
</Window>
