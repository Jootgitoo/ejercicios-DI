<Window x:Class="Ejercicio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Menu">

                <Grid Background="LightCyan">

                    <TextBlock HorizontalAlignment="Left" Margin="305,10,0,0" TextWrapping="Wrap" Text="SNAKE" VerticalAlignment="Top" Height="52" Width="148" FontSize="40" TextAlignment="Center"/>

                    <TextBlock HorizontalAlignment="Left" Margin="270,92,0,0" TextWrapping="Wrap" Text="Numero de ratones (- 4)" VerticalAlignment="Top" Height="17" Width="218" TextAlignment="Center" />
                    <TextBox x:Name="tbNumeroRatones" HorizontalAlignment="Left" Margin="350,114,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="58"/>


                    <TextBlock HorizontalAlignment="Left" Margin="294,161,0,0" TextWrapping="Wrap" Text="Tamaño de la serpiente (- 8 casillas)" VerticalAlignment="Top" Width="194" TextAlignment="Center" />
                    <TextBox Name="tbSizeSerpiente" HorizontalAlignment="Left" Margin="355,182,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="53"/>

                    <TextBlock HorizontalAlignment="Left" Margin="294,229,0,0" TextWrapping="Wrap" Text="Numero de paredes" VerticalAlignment="Top" Width="194" TextAlignment="Center" />
                    <TextBox x:Name="tbNumeroParedes" HorizontalAlignment="Left" Margin="355,250,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="53"/>

                    <Button Name="btnShow" Content="Show" HorizontalAlignment="Left" Margin="199,338,0,0" VerticalAlignment="Top" Height="43" Width="111" Click="btnShow_Click"/>
                    <Button Name="btnEnd" Content="End" HorizontalAlignment="Left" Margin="425,338,0,0" VerticalAlignment="Top" Height="43" Width="108"/>

                </Grid>
                
                

            </TabItem>

            <TabItem Header="Juego">

                <Grid x:Name="gridGame" Background="LightCoral" ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                </Grid>

            </TabItem>
            
        </TabControl>

    </Grid>
</Window>
