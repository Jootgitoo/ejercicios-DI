<Window x:Class="ConversorUnidades.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConversorUnidades"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Longitud">
                <Grid Background="AliceBlue">
                    
                    <TextBlock HorizontalAlignment="Left" Margin="39,16,0,0" TextWrapping="Wrap" Text="Escriba el numero y elija las unidades de medidas que desee" Background="Black" Foreground="White" VerticalAlignment="Top" Height="18" Width="328"/>


                    <TextBox x:Name="tboxNumero" HorizontalAlignment="Left" Margin="55,47,0,0" TextWrapping="Wrap" Text="" TextAlignment="Center" VerticalAlignment="Top" Width="71" Height="25"/>

                    <ComboBox Name="cb1" Margin="141,44,473,312">
                        <ComboBoxItem Content="Metros"></ComboBoxItem>
                        <ComboBoxItem Content="Kilometros"></ComboBoxItem>
                    </ComboBox>

                    <TextBlock HorizontalAlignment="Left" Margin="397,61,0,0" TextWrapping="Wrap" Text="A" VerticalAlignment="Top"/>

                    <ComboBox Name="cb2" Margin="470,44,144,312">
                        <ComboBoxItem Content="Metros"/>
                        <ComboBoxItem Content="Kilometros"/>
                    </ComboBox>
                    <TextBox x:Name="tbResultado" HorizontalAlignment="Left" Margin="141,147,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="509" Height="27"/>
                    <Button Name="btConvertir" Content="Convertir" Background="LightGreen" FontSize="24" FontStyle="Italic" HorizontalAlignment="Left" Margin="456,281,0,0" VerticalAlignment="Top" Height="43" Width="208" Click="btConvertir_Click"/>




                    <Image x:Name="imgLongitud" Tag="Wand" HorizontalAlignment="Left" Height="165" Margin="41,203,0,0" VerticalAlignment="Top" Width="240" Source="../images/longitud.jpg"/>

                </Grid>


            </TabItem>


            <TabItem Header="Peso">
                <Grid Background="AntiqueWhite"/>
            </TabItem>
        </TabControl>



    </Grid>
</Window>
